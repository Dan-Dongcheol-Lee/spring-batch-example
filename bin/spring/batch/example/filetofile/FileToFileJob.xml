<?xml version="1.0" encoding="UTF-8"?>
<bean:beans xmlns:bean="http://www.springframework.org/schema/beans"
    xmlns="http://www.springframework.org/schema/batch"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-2.1.xsd">
    
    <bean:bean class="org.springframework.batch.core.scope.StepScope"/>
    
    <job id="fileToFileJob">
        <step id="step1">
            <tasklet>
                <chunk commit-interval="#{jobParameters['COMMIT_INTERVAL']}"
                    reader="itemReader" processor="itemProcessor" writer="itemWriter"/>
            </tasklet>
        </step>
		<listeners>
			<listener ref="itemProcessor"/>
        </listeners>
    </job>

</bean:beans>
